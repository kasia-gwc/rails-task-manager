<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= form_for(@task) do |f| %>
  <%= f.label "Mark as completed" %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>


<%= link_to 'Back to all tasks', tasks_path  %>

<%= link_to 'Edit this task', edit_task_path(@task) %>

<%= link_to 'Delete task', delete_task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete?"}   %>






